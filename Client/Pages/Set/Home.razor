@page "/set"

@inject ISetListViewModel CategoriesVM

<StateContainer ViewModel="CategoriesVM" Name="CategoriesVM">
    <SetList />
</StateContainer>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CategoriesVM.LoadCategories();
        }
    }
}