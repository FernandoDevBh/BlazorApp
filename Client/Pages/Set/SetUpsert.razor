@page "/set/create"
@page "/set/edit/{id:int}"

@inject ISetViewModel CategoryVM
@attribute [Authorize(Roles = SD.Role_Admin)]

<StateContainer ViewModel="CategoryVM" Name="CategoryVM">
    <Upsert Title="@($"{CategoryVM.Title} Set")">
        <SetForm />
        <Loading Show="CategoryVM.IsLoading" />
    </Upsert>
</StateContainer>

@code {
    [Parameter]
    public int Id { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CategoryVM.LoadCategory();
        }
    }    

    protected override void OnParametersSet()
    {
        CategoryVM.Id = Id;
    }
}
