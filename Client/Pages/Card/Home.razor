@page "/card/{id:int}"

@inject ICardListVM CardListVM

<StateContainer ViewModel="CardListVM" Name="CardListVM">
    <CardList />
</StateContainer>

@code {
    [Parameter]
    public int Id { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CardListVM.LoadCards();
        }
    }

    protected override void OnParametersSet()
    {
        CardListVM.SetId = Id;
    }
}
