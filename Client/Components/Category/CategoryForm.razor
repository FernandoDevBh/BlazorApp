<div class="container mx-auto">
    <div class="bg-white rounded-md shadow-sm">
        <EditForm Model="CategoryVM" OnValidSubmit="CategoryVM.UpsertCategory" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <DataAnnotationsValidator />                
            <div class="mb-6 flex gap-4">
                <div class="flex-grow">
                    <label
                        class="block mb-2 text-sm text-gray-600"
                        for="name"
                    >
                        Name
                    </label>
                    <InputText
                        @bind-Value="CategoryVM.Name"
                        class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md  focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300"
                    />
                </div>
                @if (!string.IsNullOrEmpty(CategoryVM.Symbol))
                {
                    <img class="w-12 h-12 mt-6" src="@CategoryVM.Symbol">
                }
                <ValidationMessage For="() => CategoryVM.Name" />
            </div>
            <div class="mb-6">                
                <label
                    class="block mb-2 text-sm text-gray-600"
                    for="name"
                >
                    Symbol
                </label>
                <InputFile OnChange="CategoryVM.HandleImageUpload"
                    class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md  focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300"
                />
            </div>
            <div class="col">
                <button
                    type="submit"
                    class="inline-block px-6 py-2.5 bg-green-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-green-600 hover:shadow-lg focus:bg-green-600 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-green-700 active:shadow-lg transition duration-150 ease-in-out">
                    @CategoryVM.Title
                </button>
                <NavLink href="category" class="inline-block px-6 py-2.5 bg-gray-200 text-gray-700 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-gray-300 hover:shadow-lg focus:bg-gray-300 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-400 active:shadow-lg transition duration-150 ease-in-out">Back to Index</NavLink>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [CascadingParameter(Name = "CategoryVM")]
    public ICategoryViewModel CategoryVM { get; set; } = null!;    
}
